{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .collection__header {
    margin-bottom: 3rem;
  }

  .collection__header-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .collection__header-left {
    flex: 1;
  }

  .collection__main-title {
    font-size: 2.5rem;
    font-weight: 600;
    color: #333;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .collection__tabs {
    display: flex;
    align-items: center;
    gap: 0;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .collection__tab {
    background: none;
    border: none;
    padding: 0.5rem 1.5rem;
    font-size: 0.9rem;
    font-weight: 500;
    color: #666;
    cursor: pointer;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    position: relative;
    transition: color 0.3s ease;
  }

  .collection__tab:hover {
    color: #333;
  }

  .collection__tab--active {
    color: #333;
  }

  .collection__tab--active::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 1.5rem;
    right: 1.5rem;
    height: 2px;
    background-color: #333;
  }

  .collection__tab-separator {
    width: 1px;
    height: 20px;
    background: #ddd;
    transform: rotate(15deg);
    margin: 0 0.5rem;
    flex-shrink: 0;
  }

  .collection__header-right {
    flex-shrink: 0;
  }

  .collection__view-all-button {
    background: linear-gradient(to right, #00bcd4 0%, #0097a7 50%, #0277bd 100%);
    color: white;
    padding: 0.875rem 2.25rem;
    border-radius: 50px;
    border: none;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-size: 0.8125rem;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    box-shadow: 0 3px 12px rgba(0, 188, 212, 0.35), 0 1px 4px rgba(0, 188, 212, 0.25);
    cursor: pointer;
    display: inline-flex;
  }

  .collection__view-all-button:hover {
    box-shadow: 0 4px 16px rgba(0, 188, 212, 0.4), 0 2px 6px rgba(0, 188, 212, 0.3);
    color: white;
  }

  .collection__view-all-button:active {
    box-shadow: 0 2px 8px rgba(0, 188, 212, 0.3), 0 1px 3px rgba(0, 188, 212, 0.25);
  }

  @media screen and (max-width: 749px) {
    .collection__header-content {
      flex-direction: column;
      gap: 1.5rem;
    }

    .collection__main-title {
      font-size: 2rem;
    }

    .collection__tabs {
      flex-wrap: wrap;
    }

    .collection__tab {
      padding: 0.5rem 1rem;
      font-size: 0.8rem;
    }

    .collection__view-all-button {
      width: 100%;
      text-align: center;
    }
  }
{%- endstyle -%}

{%- liquid
  assign products_to_display = section.settings.collection.all_products_count

  if section.settings.collection.all_products_count > section.settings.products_to_show
    assign products_to_display = section.settings.products_to_show
    assign more_in_collection = true
  endif

  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and products_to_display > columns_mobile_int
    assign show_mobile_slider = true
  endif

  assign show_desktop_slider = false
  if section.settings.enable_desktop_slider and products_to_display > section.settings.columns_desktop
    assign show_desktop_slider = true
  endif
-%}

<div class="color-{{ section.settings.color_scheme }} isolate gradient">
  <div class="collection section-{{ section.id }}-padding{% if section.settings.full_width %} collection--full-width{% endif %}">
    <div class="collection__header page-width">
      <div class="collection__header-content">
        <div class="collection__header-left">
          {%- if section.settings.title != blank -%}
            <h2 class="collection__main-title inline-richtext {{ section.settings.heading_size }}">{{ section.settings.title }}</h2>
          {%- endif -%}
          {%- if section.settings.show_tabs -%}
            <nav class="collection__tabs" role="tablist">
              <button
                class="collection__tab{% if section.settings.active_tab == 'bestsellers' %} collection__tab--active{% endif %}"
                role="tab"
                aria-selected="{% if section.settings.active_tab == 'bestsellers' %}true{% else %}false{% endif %}"
                data-tab="bestsellers"
              >
                {{ section.settings.tab_bestsellers_label | default: 'BEST SELLERS' }}
              </button>
              <span class="collection__tab-separator"></span>
              <button
                class="collection__tab{% if section.settings.active_tab == 'new' %} collection__tab--active{% endif %}"
                role="tab"
                aria-selected="{% if section.settings.active_tab == 'new' %}true{% else %}false{% endif %}"
                data-tab="new"
              >
                {{ section.settings.tab_new_label | default: 'NEW ARRIVALS' }}
              </button>
              <span class="collection__tab-separator"></span>
              <button
                class="collection__tab{% if section.settings.active_tab == 'sale' %} collection__tab--active{% endif %}"
                role="tab"
                aria-selected="{% if section.settings.active_tab == 'sale' %}true{% else %}false{% endif %}"
                data-tab="sale"
              >
                {{ section.settings.tab_sale_label | default: 'ON-SALE' }}
              </button>
            </nav>
          {%- endif -%}
        </div>
        {%- if section.settings.show_view_all_button and section.settings.collection.url != blank -%}
          <div class="collection__header-right">
            <a
              href="{{ section.settings.collection.url }}"
              class="collection__view-all-button button"
              aria-label="{{ 'sections.featured_collection.view_all_label' | t: collection_name: section.settings.collection.title }}"
            >
              {{ section.settings.view_all_button_text | default: 'VIEW ALL BESTSELLERS' }}
            </a>
          </div>
        {%- endif -%}
      </div>
      {%- if section.settings.description != blank
        or section.settings.show_description
        and section.settings.collection.description != empty
      -%}
        <div class="collection__description {{ section.settings.description_style }} rte">
          {%- if section.settings.show_description -%}
            {{ section.settings.collection.description }}
          {%- else -%}
            {{ section.settings.description -}}
          {%- endif %}
        </div>
      {%- endif -%}
    </div>

    <slider-component class="slider-mobile-gutter{% if section.settings.full_width %} slider-component-full-width{% endif %}{% if show_mobile_slider == false %} page-width{% endif %}{% if show_desktop_slider == false and section.settings.full_width == false %} page-width-desktop{% endif %}{% if show_desktop_slider %} slider-component-desktop{% endif %}">
      <ul
        id="Slider-{{ section.id }}"
        class="grid product-grid contains-card contains-card--product{% if settings.card_style == 'standard' %} contains-card--standard{% endif %} grid--{{ section.settings.columns_desktop }}-col-desktop{% if section.settings.collection == blank %} grid--2-col-tablet-down{% else %} grid--{{ section.settings.columns_mobile }}-col-tablet-down{% endif %}{% if show_mobile_slider or show_desktop_slider %} slider{% if show_desktop_slider %} slider--desktop{% endif %}{% if show_mobile_slider %} slider--tablet grid--peek{% endif %}{% endif %}"
        role="list"
        aria-label="{{ 'general.slider.name' | t }}"
      >
        {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
          <li
            id="Slide-{{ section.id }}-{{ forloop.index }}"
            class="grid__item{% if show_mobile_slider or show_desktop_slider %} slider__slide{% endif %}"
          >
            {% render 'card-product',
              card_product: product,
              media_aspect_ratio: section.settings.image_ratio,
              show_secondary_image: section.settings.show_secondary_image,
              show_vendor: section.settings.show_vendor,
              show_rating: section.settings.show_rating,
              show_quick_add: section.settings.enable_quick_add,
              section_id: section.id
            %}
          </li>
        {%- else -%}
          {%- for i in (1..4) -%}
            <li class="grid__item">
              {% render 'card-product', show_vendor: section.settings.show_vendor %}
            </li>
          {%- endfor -%}
        {%- endfor -%}
      </ul>
      {%- if show_mobile_slider or show_desktop_slider -%}
        <div class="slider-buttons no-js-hidden">
          <button
            type="button"
            class="slider-button slider-button--prev"
            name="previous"
            aria-label="{{ 'general.slider.previous_slide' | t }}"
            aria-controls="Slider-{{ section.id }}"
          >
            {% render 'icon-caret' %}
          </button>
          <div class="slider-counter caption">
            <span class="slider-counter--current">1</span>
            <span aria-hidden="true"> / </span>
            <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
            <span class="slider-counter--total">{{ products_to_display }}</span>
          </div>
          <button
            type="button"
            class="slider-button slider-button--next"
            name="next"
            aria-label="{{ 'general.slider.next_slide' | t }}"
            aria-controls="Slider-{{ section.id }}"
          >
            {% render 'icon-caret' %}
          </button>
        </div>
      {%- endif -%}
    </slider-component>

    {%- if section.settings.show_view_all and more_in_collection -%}
      <div class="center collection__view-all">
        <a
          href="{{ section.settings.collection.url }}"
          class="{% if section.settings.view_all_style == 'link' %}link underlined-link{% elsif section.settings.view_all_style == 'solid' %}button{% else %}button button--secondary{% endif %}"
          aria-label="{{ 'sections.featured_collection.view_all_label' | t: collection_name: section.settings.collection.title }}"
        >
          {{ 'sections.featured_collection.view_all' | t }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

