    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "default": "MICHAEL CARTER",
          "label": "Name"
        },
        {
          "type": "text",
          "id": "title",
          "default": "Design Quarterly",
          "label": "Title/Affiliation"
        },
        {
          "type": "richtext",
          "id": "quote",
          "default": "<p>\"Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.\"</p>",
          "label": "Quote"
        },
        {
          "type": "text",
          "id": "initials",
          "default": "MC",
          "label": "Avatar initials"
        },
        {
          "type": "color",
          "id": "avatar_color",
          "label": "Avatar color",
          "default": "#2dd4bf"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}

