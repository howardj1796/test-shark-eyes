  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "WHAT PEOPLE ARE SAYING ABOUT SHARK EYES",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subheading",
